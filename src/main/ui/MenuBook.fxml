    <AnchorPane maxHeight="300.0" maxWidth="350.0" minHeight="300.0" minWidth="350.0" prefHeight="300.0" prefWidth="350.0" VBox.vgrow="ALWAYS">
         <children>
            <DatePicker fx:id="fxDate" layoutX="75.0" layoutY="8.0" />
            <Label layoutX="14.0" layoutY="12.0" text="Date" />
            <Label layoutX="14.0" layoutY="44.0" text="Time" />
            <Label layoutX="14.0" layoutY="77.0" text="Duration" />
            <ChoiceBox fx:id="fxChoiceTime" layoutX="74.0" layoutY="40.0" prefWidth="150.0" />
            <ChoiceBox fx:id="fxChoiceDuration" layoutX="74.0" layoutY="73.0" prefWidth="150.0" />
